@model QMaze.Models.GameStatisticsModel


<div id="PlayerList">
    <table class="table table-hover table-responsive">
        <thead>
            <tr>
                <th>@Html.Raw(QMaze.Resources.HomeTexts.Username)</th>
                <th>@Html.Raw(QMaze.Resources.HomeTexts.Highscore)</th>
                <th>@Html.Raw(QMaze.Resources.HomeTexts.GamesPlayed)</th>
                <th>@Html.Raw(QMaze.Resources.HomeTexts.QuestionsAnswered)</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var m in Model.AppUsers)
            {
                <tr>
                    <td>@m.UserName</td>
                    <td>@m.HighScore</td>
                    <td>@m.GamesPlayed</td>
                    <td>@m.QuestionsTotal</td>
                </tr>
            }
        </tbody>
    </table>
</div>